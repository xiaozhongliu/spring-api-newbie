<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webapi.newbie.mapper.AccountDao">

    <!-- open second level cache -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- common result map -->
    <resultMap id="BaseResultMap" type="com.webapi.newbie.entity.Account">
        <id column="id" property="id" />
        <result column="last_password_reset_date" property="lastPasswordResetDate" />
        <result column="password" property="password" />
        <result column="username" property="username" />
    </resultMap>

    <!-- common result columns -->
    <sql id="Base_Column_List">
        id, last_password_reset_date, password, username
    </sql>

</mapper>
